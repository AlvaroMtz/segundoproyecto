<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<div class="container event-container">
  <div class="row">
    <div class="col-sm-2">
      <img src="https://ksr-ugc.imgix.net/assets/007/188/910/68df9ec3603e3f3138bed402dea3cab2_original.jpg?w=80&h=80&fit=crop&v=1466566705&auto=format&q=92&s=eff05acf65569368cc99f6363722fe60"><br>
      By: <strong><%= event.creatorId.username %></strong>
    </div>
    <div class="col-sm-10">
      <h1><%= event.title %></h1>
      <h2 class="event-category"><%= event.category %></h2>
      <p class="event-description"><%= event.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <img class="event-image" src="<%= event.image %>">
    </div>
    <div class="col-sm-4 event-info">
      <div class="event-progress">
        <progress value="<%= event.totalPledged %>" max="<%= event.goal %>"></progress>
      </div>
      <div class="event-pledged">
        <span class="event-total">$<%= event.totalPledged %></span><br>
        <span class="light-text">
          pledged of
          $<%= event.goal %></span> goal
        </span>
      </div>
      <div class="event-backers">
        <strong class="large-strong"><%= event.backerCount %></strong><br>
        <span class="light-text">backers</span>
      </div>
      <a class="btn backer-btn" href="/events/<%= event._id%>/rewards">Back This Project</a>
    </div>
  </div>
</div>